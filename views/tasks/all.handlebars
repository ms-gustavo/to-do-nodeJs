<h1>Todas as tasks</h1>
<ul class="task-list">
  {{#each tasks}}
    <li>
      {{#if this.completed}}
        <a
          href="/tasks/details/{{this.id}}"
          class="title completed"
        >{{this.title}}</a>
      {{else}}
        <a href="/tasks/details/{{this.id}}" class="title">{{this.title}}</a>
      {{/if}}
      <div class="actions">
        <a href="/">
          <form action="/tasks/updatestatus" method="POST">
            <input type="hidden" name="id" value={{this.id}} />
            <input type="hidden" name="completed" value={{this.completed}} />
            <button type="submit"><i class="bi bi-check2"></i>
            </button>
          </form></a>
        <a href="/tasks/edit/{{this.id}}"><i
            class="bi bi-pencil-square"
          ></i></a>
        <form action="/tasks/remove" method="POST">
          <input type="hidden" name="id" value={{this.id}} />
          <button type="submit">
            <i class="bi bi-x-lg"></i>
          </button>
        </form>
      </div>
    </li>
  {{/each}}
</ul>